
<launch>

  <arg name="model" default="$(find vss_simulation)/urdf/vss_robot.xacro" />

  <!-- Spawn robot #0 -->
  <group ns="robot_0">
    <param name="tf_prefix" value="robot0_tf" />
    <include file="$(find vss_simulation)/launch/spawn_robot.launch" >
      <arg name="robot_number"  value="0" />
      <arg name="x" value="-0.2" />
      <arg name="y" value="0" />
      <arg name="model" value="$(arg model)" />
    </include>
  </group>

  <!-- Spawn robot #1 -->
  <group ns="robot_1">
    <param name="tf_prefix" value="robot1_tf" />
    <include file="$(find vss_simulation)/launch/spawn_robot.launch" >
      <arg name="robot_number"  value="1" />
      <arg name="x" value="-0.5" />
      <arg name="y" value="0.3" />
      <arg name="model" value="$(arg model)" />
    </include>
  </group>

  <!-- Spawn robot #2 -->
  <group ns="robot_2">
    <param name="tf_prefix" value="robot2_tf" />
    <include file="$(find vss_simulation)/launch/spawn_robot.launch" >
      <arg name="robot_number"  value="2" />
      <arg name="x" value="-0.5" />
      <arg name="y" value="-0.3" />
      <arg name="model" value="$(arg model)" />
    </include>
  </group>

  <!-- Spawn robot #3 -->
  <group ns="robot_3">
    <param name="tf_prefix" value="robot3_tf" />
    <include file="$(find vss_simulation)/launch/spawn_robot.launch" >
      <arg name="robot_number"  value="3" />
      <arg name="x" value="0.2" />
      <arg name="y" value="0" />
      <arg name="yaw" value="3.14159" />
      <arg name="model" value="$(arg model)" />
    </include>
  </group>

  <!-- Spawn robot #4 -->
  <group ns="robot_4">
    <param name="tf_prefix" value="robot4_tf" />
    <include file="$(find vss_simulation)/launch/spawn_robot.launch" >
      <arg name="robot_number"  value="4" />
      <arg name="x" value="0.5" />
      <arg name="y" value="0.3" />
      <arg name="yaw" value="3.14159" />
      <arg name="model" value="$(arg model)" />
    </include>
  </group>

  <!-- Spawn robot #5 -->
  <group ns="robot_5">
    <param name="tf_prefix" value="robot5_tf" />
    <include file="$(find vss_simulation)/launch/spawn_robot.launch" >
      <arg name="robot_number"  value="5" />
      <arg name="x" value="0.5" />
      <arg name="y" value="-0.3" />
      <arg name="yaw" value="3.14159" />
      <arg name="model" value="$(arg model)" />
    </include>
  </group>

</launch>